<div class="row">
  <div class="col-md-6 m-auto">
    <div class="container mt-5 pl-5">
      <h2 class="mb-4">SIGNUP</h2>
      <form action="/signup" method="post" class="d-flex flex-column">

        <div class="form-group">
          <label for="exampleInputName1">Name</label>
          <input type="text" class="form-control mt-2" id="exampleInputName1" placeholder="Enter Name" name="name">
          
        </div>
        <div class="form-group mt-4">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email" class="form-control mt-2" id="exampleInputEmail1" placeholder="Enter email" name="email">
          
        </div>
        <div class="form-group mt-4">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" class="form-control mt-2" id="exampleInputPassword1" placeholder="Password" name="password">
        </div>

        <a href="/login" class="mt-2">Already have an account?</a>
        <button type="submit" class="btn btn-primary align-self-end">Signup</button>
      </form>
    </div>
  </div>
</div>
