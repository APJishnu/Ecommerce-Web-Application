  <style>
        /* Add your custom styles here */
    body {
      margin: 0;
      font-family: Arial, sans-serif;
    }
    .navbar {
      background: #fdfeff;
    }
    .navbar-nav .nav-link {
      color: #191818c9 !important; /* Set the text color to white */
    }
    .navbar-brand img {
      height: 40px; /* Adjust as needed */
    }
    .navbar .nav-item {
      margin-left: 15px; /* Adjust spacing between items */
    }
    .navbar .nav-link {
      display: flex;
      align-items: center;
      gap: 6px; /* Adjust spacing between icon and text */
      text-decoration: none;
      color: #ffffff;
      font-weight: bold; /* Adjust font weight */
      position: relative;
    }
    .navbar .nav-link::after {
      content: '';
      display: block;
      width: 0;
      height: 2px;
      background-color: transparent; /* Initially transparent */
      position: absolute;
      bottom: -2px;
      left: 50%;
      transform: translateX(-50%);
      transition: width 0.3s, background-color 0.3s; /* Transition both width and background-color */
    }
    .navbar .nav-item.active .nav-link::after {
      width: calc(100% - 10px); /* Expand width on hover */
      background-color: #007bff; /* Change background-color on hover */
    }
    .navbar .nav-link .badge {
      position: absolute;
      top: 30%;
      right: -2px;
      transform: translate(0%, -50%);
    }

    @media (max-width: 767.98px) {
      .navbar .nav-link .badge {
        left: 65%; /* Adjust the badge position for smaller screens */
      }
      .navbar-nav {
        display: flex;
        flex-direction: row;
        justify-content: space-around;
      }
      .navbar-nav .nav-item {
        margin: 0;
        padding: 10px;
        border-bottom: none;
        font-size: small;
      }
      .navbar .dropdown-menu {
        position: absolute;
        top: 100%;
        left: 0;
        z-index: 1000;
        display: none;
        float: left;
        min-width: 10rem;
        padding: 0.5rem 0;
        margin: 0.125rem 0 0;
        font-size: 1rem;
        color: #212529;
        text-align: left;
        list-style: none;
        background-color: #ffffff;
        background-clip: padding-box;
        border: 1px solid rgba(0, 0, 0, 0.15);
        border-radius: 0.25rem;
      }
      .navbar .dropdown-menu.show {
        display: block;
      }
      .navbar .dropdown-menu .dropdown-item {
        display: block;
        width: auto;
        clear: both;
        float: none;
        text-align: left;
      }
    }
  </style>

