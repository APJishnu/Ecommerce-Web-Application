<!-- Edit Product Form -->
<section>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-6">
        <h2 class="text-center">Edit Product</h2>

        <form action="/admin/edit-products/{{product._id}}" method="post" enctype="multipart/form-data">

          <label for="name">Name</label>
          <input type="text" class="form-control" name="name" placeholder="Enter product name" value="{{product.name}}">

          <label for="category">Category</label>
          <input type="text" class="form-control" name="category" placeholder="Enter category" value="{{product.category}}">

          <label for="price">Price</label>
          <input type="text" class="form-control" name="price" placeholder="Enter price" value="{{product.price}}">

          <label for="description">Description</label>
          <textarea class="form-control" name="description" rows="3" placeholder="Enter product description">{{product.description}}</textarea>

          <label for="image">Change Image</label>
          <img style="width: 50px; height: 50px" src="/img/{{product.image}}" alt="current-image" id="imgView">
          
          <input type="file" class="form-control" name="image" onchange="viewImage(event)">

          <button type="submit" class="btn btn-success mt-4">Submit</button>
        </form>
      </div>
        <!-- Assuming 'product' is the current product being added/edited -->
<form action="/admin/add-rating/{{product._id}}" method="post">
  <label for="rating">Rating:</label>
  <input type="number" id="rating" name="rating" min="1" max="5" required>
  <button type="submit">Submit Rating</button>
</form>
    </div>
  </div>
</section>



<script>
  function viewImage(event){
    document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
  }
</script>
